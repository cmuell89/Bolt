container_commands:
  00_install_spacy_en:
    command: 'source /opt/python/run/venv/bin/activate ; python -m spacy.en.download --force'
    leader_only: true
  01_install_nltk_data:
    command: 'source /opt/python/run/venv/bin/activate ; python -m nltk.downloader -d /usr/local/share/nltk_data stopwords'
    leader_only: true